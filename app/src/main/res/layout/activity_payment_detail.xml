<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentDetail">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#512da8"
        android:id="@+id/action_bar"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/AppTheme.Toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:text="Complete Book"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/ly1"
        android:layout_centerHorizontal="true"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_bar"
        android:layout_marginTop="12dp"
        android:background="@drawable/background_popup"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10sp"
            android:text="name"
            android:textColor="#D8D8D8"
            android:textSize="12sp"
            android:translationY="-4.8sp" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#585858"
            android:textSize="16sp"
            android:text="Toni Kroos"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10sp"
                    android:text="Phone number"
                    android:textColor="#d8d8d8"
                    android:textSize="12sp"
                    android:translationY="-4.8sp" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="081787216756"
                    android:textColor="#adadad"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10sp"
                    android:text="Seat"
                    android:textColor="#d8d8d8"
                    android:textSize="12sp"
                    android:translationY="-4.8sp" />

                <TextView
                    android:id="@+id/tickets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#adadad"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly1"
        android:id="@+id/payment"
        android:text="Payment method"
        android:layout_marginHorizontal="32dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:textColor="#3d3d3d"/>
    <LinearLayout
        android:paddingVertical="15dp"
        android:background="@drawable/background_popup"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/payment"
        android:paddingHorizontal="30dp"
        android:orientation="vertical"
        android:id="@+id/ly2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PO Name"
                android:textColor="#d8d8d8"
                android:textSize="12sp"
                android:lineSpacingExtra="10sp"
                android:translationY="-4.8sp"/>

            <TextView
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bus no"
                android:textColor="#d8d8d8"
                android:textSize="12sp"
                android:lineSpacingExtra="10sp"
                android:translationY="-4.8sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expo bus service"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#585858"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="P 1963 nm"
                android:textAlignment="textEnd"
                android:textSize="12sp"
                android:textColor="#9a9a9a"
                android:lineSpacingExtra="10sp"
                android:translationY="-4.8sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="schedule"
                android:lineSpacingExtra="10sp"
                android:textColor="#d8d8d8"
                android:textSize="12sp"
                android:translationY="-4.8sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:textColor="#d8d8d8"
                android:textSize="12sp"
                android:translationY="-4.8sp"
                android:textAlignment="textEnd"
                android:text="estimated_time"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09.00"
                style="@style/time_bus"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departure"
                    android:text="Jakarta"
                    style="@style/style_arrival_departure_payment_detail"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_departure"
                    style="@style/style_arrival_departure_payment_detail"
                    android:textStyle="normal"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                style="@style/style_arrival_departure_payment_detail"
                android:text="3h30m"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.30"
                style="@style/time_bus"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/arrival"
                    android:text="Bandung"
                    style="@style/style_arrival_departure_payment_detail"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_arrival"
                    style="@style/style_arrival_departure_payment_detail"
                    android:textStyle="normal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="seat no"
                    android:lineSpacingExtra="10sp"
                    android:textColor="#d8d8d8"
                    android:textSize="12sp"
                    android:translationY="-4.8sp"
                    android:textAlignment="textEnd"/>
                <TextView
                    style="@style/style_arrival_departure_payment_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="c5"
                    android:id="@+id/list_seat"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingVertical="15dp"
        android:background="@drawable/background_popup"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ly2"
        android:paddingHorizontal="30dp"
        android:orientation="horizontal"
        android:backgroundTint="#C3C0C0"
        android:id="@+id/ly3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tickets"
            android:textColor="#808080"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:text="1 X 150.000"
            android:id="@+id/txt_ticket"
            android:textColor="#808080"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingVertical="15dp"
        android:background="@drawable/background_popup"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ly3"
        android:paddingHorizontal="30dp"
        android:orientation="horizontal"
        android:backgroundTint="#8749F2"
        android:id="@+id/ly4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:text="Rp 150.000,00"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginHorizontal="32dp"
        android:id="@+id/btnpayment"
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#673AB7"
        android:text="continue to payment"
        android:background="@drawable/background_popup"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:letterSpacing="0.01"/>
</RelativeLayout>